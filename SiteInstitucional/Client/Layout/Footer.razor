@using Microsoft.Extensions.Localization
@using SiteInstitucional.Shared.I18n.Client
@inject IStringLocalizer<Header> MenuLocalizer
@inject IStringLocalizer<Footer> FooterLocalizer

<footer class="footer mt-auto py-3 cor-fundo-cinza-escuro">
    <div class="container cor-branco pt-3">
        <div class="row">
            <div class="col-6 col-sm-4 col-md-4 col-lg-3 text-center">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <img src="img/brand-258x215.png" alt="Logomarca da Schadek" class="logomarca" />
                </NavLink>
            </div>
            <div class="col-6 offset-lg-1 col-lg-8">
                <div class="card-columns">
                    @foreach (var item in MenuBuilder.Build())
                    {
                        <div class="card">
                            <ul class="text-left pl-0">
                                <li>
                                    <h6 class="menu-item">
                                        <NavLink href="@item.CompleteRoute">
                                            @MenuLocalizer[item.Description]
                                        </NavLink>
                                    </h6>
                                </li>
                                @if (item.ChildItems != null)
                                {
                                    @foreach (var subItem in item.ChildItems)
                                    {
                                        <li>
                                            @if (String.IsNullOrEmpty(subItem.Route))
                                            {
                                                <span class="menu-subitem">@MenuLocalizer[subItem.Description]</span>
                                            }
                                            else
                                            {
                                                <NavLink href="@subItem.CompleteRoute" class="menu-subitem">
                                                    @MenuLocalizer[subItem.Description]
                                                </NavLink>
                                            }
                                        </li>
                                    }
                                }
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 text-center copyright">
                &copy; @DateTime.Now.Year - @FooterLocalizer["SCHADEK | Todos os direitos reservados."]
            </div>
        </div>
    </div>
</footer>